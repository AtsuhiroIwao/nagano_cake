<div class="mt-5 ml-5">
  <h4>配送先登録/一覧</h4>
</div>

<%= form_with model: @address,url:public_addresses_path,method: :post do |f| %>

<div class="d-flex mt-5 ml-5">
  <h5>郵便番号</h5><h6 class="mr-3">(ハイフンなし)</h6>
    <%= f.text_field:postal_code %>
</div>

<div class="d-flex mt-3 ml-5">
  <h5 class="mr-5">住所</h5>
    <div class="ml-5">
　　　　<%= f.text_field:address,size:60 %>
    </div>
</div>

<div class="d-flex mt-3 ml-5">
  <h5 class="mr-5">宛名</h5>
    <div class="ml-5">
　　　　<%= f.text_field:name %>
    </div>
</div>

<div class="d-flex align-items-center justify-content-center">
<button class="btn btn-md btn-success" type="submit">
  新規登録
</button>
</div>
<% end %>

<div class="container mt-5">
<div class="row">
<div class="col-11">
<table class="table table-bordered">
  <tr>
    <th scope="col" style="width: 15%">郵便番号</th>
    <th scope="col" style="width: 40%">住所</th>
    <th scope="col" style="width: 15%">宛名</th>
    <th scope="col" style="width: 30%"></th>
  </tr>

  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to edit_public_address_path(address.id) do %>
        <button class="btn btn-md btn-success" type="submit">
        編集する
        </button>
        <% end %>

        <%= link_to public_address_path(address.id), method: :delete,"data-confirm" => "本当に消しますか？" do %>
          <button class="btn btn-md btn-danger" type="submit">
            削除する
          </button>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</div>
</div>
</div>
