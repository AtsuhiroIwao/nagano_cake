<div class="mt-5 ml-5">
  <h4>配送先編集</h4>
</div>

<%= form_with model: @address,url:public_address_path,method: :patch do |f| %>

<div class="d-flex mt-5 ml-5">
  <h5>郵便番号</h5><h6 class="mr-3">(ハイフンなし)</h6>
    <%= f.text_field:postal_code %>
</div>

<div class="d-flex mt-3 ml-5">
  <h5 class="mr-5">住所</h5>
    <div class="ml-5">
　　　　<%= f.text_field:address,size:60 %>
    </div>
</div>

<div class="d-flex mt-3 ml-5">
  <h5 class="mr-5">宛名</h5>
    <div class="ml-5">
　　　　<%= f.text_field:name %>
    </div>
</div>

<div class="d-flex align-items-center justify-content-center">
<button class="btn btn-md btn-success" type="submit">
  変更内容を保存
</button>
</div>
<% end %>