<div class="mt-5 ml-5 mb-5">
  <h4>マイページ</h4>
</div>

<div class="form-inline ml-5">
<h5>登録情報　</h5>
<%= link_to edit_public_customer_path(@customer.id) do %>
<button class="btn btn-md btn-success" type="submit">
編集する
</button>
<% end %>
</div>

<div class="container mt-4">
<div class="row">
<div class="col-9">
<table class="table table-bordered">
  <tr>
    <th class="table-active" style="width: 30%">氏名</th>
    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>

  <tr>
    <th class="table-active">カナ</th>
    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>

  <tr>
    <th class="table-active">郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <th class="table-active">住所</th>
    <td><%= @customer.address %></td>
  </tr>

  <tr>
    <th class="table-active">電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>

  <tr>
    <th class="table-active">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<div class="form-inline mt-5">
<h5>配送先　　　</h5>

<%= link_to public_addresses_path do %>
<button class="btn btn-md btn-primary" type="submit">
一覧を見る
</button>
<% end %>
</div>

<div class="form-inline mt-5">
<h5>注文履歴　　</h5>

<%= link_to public_orders_path do %>
<button class="btn btn-md btn-primary" type="submit">
一覧を見る
</button>
<% end %>
</div>

</div>
</div>
</div>


