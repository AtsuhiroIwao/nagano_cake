<h4 class="m-5">注文履歴詳細</h4>

<div class="container">
 <div class="row">
  <div class="col-8">
    <h5>注文情報</h5>
<table class="table table-bordered">
    <tr>
      <th class="table-secondary">注文日</th>
        <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送先</th>
        <td>
          〒<%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
        </td>
    </tr>
    <tr>
      <th class="table-secondary">支払方法</th>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
</table>
</div>

<div class="col-4">
   <h5>請求情報</h5>
  <table class="table table-bordered">
    <tr>
      <th class="table-secondary">商品合計</th>
        <td><%= @order.total_payment-800 %></td>
    </tr>
    <tr>
      <th class="table-secondary">配送料</th>
        <td><%= @cost %></td>
    </tr>
    <tr>
      <th class="table-secondary">ご請求額</th>
        <td><%= @order.total_payment %></td>
    </tr>
  </table>
  </div>
 </div>
 <div class="row">
   <h5>注文内容</h5>
   <table class="table table-bordered">
     <tr class="table-secondary">
       <th>商品</th>
       <th>単価（税込）</th>
       <th>個数</th>
       <th>小計</th>
     </tr>
     <% @order_detail.each do |order_detail| %>
     <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.item.add_tax_price.to_s(:dalimited) %></td>
       <td><%= order_detail.amount %></td>
       <td><%= order_detail.item.add_tax_price*order_detail.amount %></td>
     </tr>
     <% end %>
   </table>
 </div>
 </div>