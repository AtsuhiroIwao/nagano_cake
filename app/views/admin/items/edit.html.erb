<div class="mt-5 ml-5">
<h3>商品編集</h3>
</div>

<%= form_with model: @item,url:admin_item_path(@item.id),method: :patch do |f| %>
<div class="d-flex align-items-center justify-content-center mt-3">
<h5>商品画像</h5>
  <%= f.file_field :profile_image %>
</div>

<div class="d-flex align-items-center justify-content-center mt-3">
<h5>商品名</h5>
  <%= f.text_field:name,size:40 %>
</div>

<div class="d-flex align-items-center justify-content-center mt-3">
<h5>商品説明</h5>
  <%= f.text_area:introduction,size:"60*40" %>
</div>

<div class="d-flex align-items-center justify-content-center mt-3">
<h5>ジャンル</h5>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  </div>

<div class="d-flex align-items-center justify-content-center mt-3">
<h5>税抜価格</h5>
  <%= f.text_field:price %>円
</div>

<div class="d-flex align-items-center justify-content-center mt-3">
<h5>販売ステータス</h5>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active,"販売中" %>
  <%= f.radio_button :is_active, false %>
  <%= f.label :is_active,"販売停止中" %>
  </div>

  <div class="d-flex align-items-center justify-content-center mt-3">
  <button class="btn btn-lg btn-success" type="submit">
  変更を保存
  </button>
  </div>
<% end %>
