<div class="mt-5 ml-5">

<h3>商品一覧</h3>

<%= link_to new_admin_item_path do %>
<button class="btn btn-lg btn-light" type="submit">
+
</button>
<% end %>

</div>

<div class="m-5">
<table class="table">
    <tr>


      <th scope="col" style="width: 10%">商品ID</th>


      <th scope="col" style="width: 40%">商品名</th>


      <th scope="col" style="width: 10%">税抜価格</th>


      <th scope="col" style="width: 30%">ジャンル</th>


      <th scope="col" style="width: 10%">ステータス</th>

      </div>
    </tr>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>

          <td><%= link_to item.name,admin_item_path(item.id) %></td>

          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active==true %>
            <%= "販売中" %>
            <% else %>
            <%= "販売停止中" %>
            <% end %>
          </td>
        </tr>
      <% end %>
  </table>
  </div>
