<div class="mt-5 ml-5">

<h3>ジャンル一覧.追加</h3>

</div>


<%= form_with model: @genre,url:admin_genres_path do |f| %>
<div class="container mt-5">
  <div class="row">
<div class="col-2">
<h6>ジャンル名</h6>
</div>

<div class="col-3">
<%= f.text_field :name %>
</div>

<div class="col-3">
<button class="btn btn-sm btn-success" type="submit">
  新規登録
  </button>
</div>
</div>
</div>
<% end %>

<div class="container mt-5">
  <div class="row">
<div class="col-4">
<table class="form-inline table">
  <tr>
  <th>ジャンル</th>
  <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td>
      <%= link_to edit_admin_genre_path(genre.id) do %>
      <button class="btn btn-sm btn-success" type="submit">
      編集する
      </button>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
</div>