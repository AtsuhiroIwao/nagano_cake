<div class="mt-5 ml-5">
<h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
</div>

<div class="container">
<div class="row">
<div class="col-4">
<table class="table table-borderless">
    <tr>
<th>会員ID</th>
<td><%= @customer.id %></td>
</tr>



<div class="mt-3">
    <tr>
<th>氏名</th>
<td><%= @customer.last_name %><%= @customer.first_name %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>フリガナ</th>
<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>郵便番号</th>
<td><%= @customer.postal_code %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>住所</th>
<td><%= @customer.address %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>電話番号</th>
<td><%= @customer.telephone_number %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>メールアドレス</th>
<td><%= @customer.email %></td>
</tr>
</div>

<div class="mt-3">
    <tr>
<th>会員ステータス</th>
<td><%= @customer.is_deleted %></td>
</tr>
</div>

</table>
</div>
</div>
</div>
<div class="d-flex mt-3 ml-5">
<%= link_to edit_admin_customer_path(@customer.id) do %>
<button class="btn btn-md btn-success" type="submit">
編集する
</button>
<% end %>
<div class="ml-3">
<%= link_to top_path do %>
<button class="btn btn-md btn-primary" type="submit">
注文履歴一覧を見る
</button>
<% end %>
</div>
</div>
</div>